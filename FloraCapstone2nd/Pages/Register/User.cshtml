@page
@model FloraCapstone2nd.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h2>User Registration</h2>
<form asp-controller="Account" asp-action="Register" method="post">
    <label asp-for="Username"></label>
    <input asp-for="Username" class="form-control"/>
    <span asp-validation-for="Username"></span>
    <br/>
    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control"/>
    <span asp-validation-for="Password"></span>
    <br/>
    <label asp-for="cPassword"></label>
    <input asp-for="cPassword" class="form-control"/>
    <span asp-validation-for="cPassword"></span>
    <br/>
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email"></span>
    <br/>

    <a asp-controller="Home" asp-action="Index" class="btn btn-light">Back</a>
    <input type="submit" style="btn btn-success" value="Register" />
</form>

