@model FloraCapstone2nd.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Register New User";
}

<h2>User Registration</h2>

<form asp-controller="Account" asp-action="RegisterUser" method="post">
<div asp-validation-summary="All" class="text-danger"></div>

    <label asp-for="Username"></label>
    <input asp-for="Username" class="form-control"/>
    <span asp-validation-for="Username" class="text-danger"></span>
    <br/>
    <label asp-for="Password"></label>
    <input asp-for="Password" class="form-control"/>
    <span asp-validation-for="Password" class="text-danger"></span>
    <br/>
    <label asp-for="cPassword">Confirm Password</label>
    <input asp-for="cPassword" class="form-control"/>
    <span asp-validation-for="cPassword" class="text-danger" value="Password"></span>
    <br/>
    <label asp-for="Email"></label>
    <input asp-for="Email" class="form-control"/>
    <span asp-validation-for="Email" class="text-danger"></span>
    <br/>
    <input type="submit" value="Register"/> 
</form>

